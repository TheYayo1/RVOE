@{
    ViewData["Title"] = "Panel Principal";
}

<header>
    <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
        <div class="container">
            <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">RVOE.web</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                    aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                <ul class="navbar-nav flex-grow-1">
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Iniciar Sesión</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Privacy">Políticas de privacidad</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>
</header>

<h2>Bienvenido, @ViewBag.Nombre 👋</h2>

<p>Selecciona una opción del menú para comenzar:</p>

<ul>
    <li><a asp-controller="Escuelas" asp-action="Index">📚 Gestión de Escuelas</a></li>
    <li><a asp-controller="Planes" asp-action="Index">📄 Planes y Programas</a></li>
    <li><a asp-controller="Requisitos" asp-action="Index">✅ Requisitos</a></li>
