@model IEnumerable<RVOE.entidades.ValidadorEntidades.Escuelas>
@{
    ViewData["Title"] = "Sistema RVOE";
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.7/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.13.1/font/bootstrap-icons.min.css">
    
</head>

<body>
    <!-- Menú lateral fijo -->
    <div class="sidebar">
        <h5 class="text-center">Sistema RVOE</h5>
        <ul class="nav flex-column">
            <li class="nav-item">
                <a class="nav-link" href="#" onclick="showSection('inicio')">
                    <i class="bi bi-house"></i> Inicio
                </a>
            </li>
            <li class="nav-item">
                <a class="nav-link active" href="#" onclick="showSection('escuelas')">
                    <i class="bi bi-building"></i> Escuelas
                </a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="#" onclick="showSection('validaciones')">
                    <i class="bi bi-check2-circle"></i> Validaciones
                </a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="#" onclick="showSection('reportes')">
                    <i class="bi bi-card-checklist"></i> Reportes
                </a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="#" onclick="showSection('configuracion')">
                    <i class="bi bi-gear"></i> Configuración
                </a>
            </li>
        </ul>
    </div>

    <!-- Contenido principal -->
    <div class="content">
        <!-- Sección Inicio -->
        <div id="inicio" class="section-content">
            <div class="card">
                <div class="card-header">
                    <h2 class="mb-0"><i class="bi bi-house me-2"></i>Panel de Control</h2>
                </div>
                <div class="card-body">
                    <h4>Bienvenido al Sistema RVOE</h4>
                    <p class="lead">Sistema de gestión para el Reconocimiento de Validez Oficial de Estudios.</p>
                    <div class="row mt-4">
                        <div class="col-md-4">
                            <div class="card bg-primary text-white">
                                <div class="card-body text-center">
                                    <i class="bi bi-building" style="font-size: 2rem;"></i>
                                    <h5 class="mt-2">Escuelas Registradas</h5>
                                    <h3>@Model.Count()</h3>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div id="escuelas" class="section-content active">
            <div class="card">
                <div class="card-header">
                    <h2 class="mb-0"><i class="bi bi-building me-2"></i>Listado de Escuelas</h2>
                </div>
                <div class="card-body">

                    <form method="get" class="search-form">
                        <div class="row">
                            <div class="col-md-8">
                                <div class="input-group">
                                    <span class="input-group-text">
                                        <i class="bi bi-search"></i>
                                    </span>
                                    <input type="text" name="search" class="form-control"
                                           placeholder="Buscar por nombre o CCT..." />
                                </div>
                            </div>
                            <div class="col-md-4">
                                <button type="submit" class="btn btn-primary w-100">
                                    <i class="bi bi-search me-1" ></i>Buscar 
                                </button>
                            </div>
                        </div>
                    </form>

                    <!-- Botón agregar -->
                    <div class="mb-3">
                        <a href="@Url.Action("Agregar")" class="btn btn-success " style=" background-color: #5B102D; border-spacing:initial">
                            <i class="bi bi-plus-circle "></i>Agregar Nueva Escuela
                        </a>
                    </div>

                    <!-- Tabla de escuelas -->
                    <div class="table-responsive">
                        <table class="table">
                            <thead>
                                <tr>
                                    <th><i class="bi bi-building me-1"></i>Nombre de la Escuela</th>
                                    <th><i class="bi bi-card-text me-1"></i>CCT</th>
                                    <th><i class="bi bi-geo-alt me-1"></i>Municipio</th>
                                    <th><i class="bi bi-gear me-1"></i>Acciones</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td><strong>@item.NombreEscuela</strong></td>
                                        <td><span class="badge bg-secondary">@item.CCT</span></td>
                                        <td>@item.Municipio</td>
                                        <td>
                                            <a href="@Url.Action("Details", new { id = item.EscuelaId })"
                                               class="btn btn-info btn-sm">
                                                <i class="bi bi-eye me-1"></i>Seleccionar
                                            </a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>

        <!-- Sección Validaciones -->
        <div id="validaciones" class="section-content">
            <div class="card">
                <div class="card-header">
                    <h2 class="mb-0"><i class="bi bi-check2-circle me-2"></i>Validaciones RVOE</h2>
                </div>
                <div class="card-body">
                    <p class="lead">Gestión de validaciones y procesos RVOE.</p>
                    <p>Esta sección estará disponible próximamente.</p>
                </div>
            </div>
        </div>

        <!-- Sección Reportes -->
        <div id="reportes" class="section-content">
            <div class="card">
                <div class="card-header">
                    <h2 class="mb-0"><i class="bi bi-card-checklist me-2"></i>Reportes del Sistema</h2>
                </div>
                <div class="card-body">
                    <p class="lead">Estadísticas y reportes del sistema RVOE.</p>
                    <p>Aquí podrás generar reportes detallados del sistema.</p>
                </div>
            </div>
        </div>

        <!-- Sección Configuración -->
        <div id="configuracion" class="section-content">
            <div class="card">
                <div class="card-header">
                    <h2 class="mb-0"><i class="bi bi-gear me-2"></i>Configuración</h2>
                </div>
                <div class="card-body">
                    <p class="lead">Configuración del sistema y parámetros.</p>
                    <p>Personaliza las opciones del sistema según tus necesidades.</p>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.7/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        function showSection(id) {
  
            document.querySelectorAll(".section-content").forEach((section) => {
                section.classList.remove("active");
            });

            document.getElementById(id).classList.add("active");

            // Actualiza clases del menú
            document.querySelectorAll(".nav-link").forEach((link) => {
                link.classList.remove("active");
            });

            
            event.target.closest('.nav-link').classList.add("active");

           
            localStorage.setItem('currentSection', id);
        }

        document.addEventListener('DOMContentLoaded', function() {
            const savedSection = localStorage.getItem('currentSection');
            if (savedSection && document.getElementById(savedSection)) {
                showSection(savedSection);
            }
        });
    </script>
</body>
</html>