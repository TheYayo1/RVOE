@model RVOE.entidades.ValidadorEntidades.Escuelas
@{
    ViewData["Title"] = "Agregar Escuela";
}

<div class="container mt-4">
    <h2>Agregar Nueva Escuela</h2>
    <form asp-action="Agregar" method="post">
        <div class="mb-3">
            <label>Nombre</label>
            <input asp-for="NombreEscuela" class="form-control" />
            <span asp-validation-for="NombreEscuela" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label>CCT</label>
            <input asp-for="CCT" class="form-control" />
            <span asp-validation-for="CCT" class="text-danger"></span>
        </div>

        @* <div class="mb-3">
            <label>Tipo de Escuela</label>
            <input asp-for="TipoEscuela" class="form-control" />
        </div> *@
        <div class="mb-3">
            <label>Tipo de Escuela</label>
            <select asp-for="TipoEscuelaId" class="form-control" asp-items="@(new SelectList(ViewBag.TiposEscuela, "TipoEscuelaId", "NombreTipo"))">
                <option value="">-- Selecciona --</option>
            </select>
            <span asp-validation-for="TipoEscuelaId" class="text-danger"></span>
        </div>


        <div class="mb-3">
            <label>Municipio</label>
            <input asp-for="Municipio" class="form-control" />
        </div>

        <button type="submit" class="btn btn-primary">Guardar</button>
        <a href="@Url.Action("Index")" class="btn btn-secondary">Cancelar</a>
    </form>
</div>
